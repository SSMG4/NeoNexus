<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="NeoNexus" Language="1033" Version="0.1.0.0" Manufacturer="SSMG4" UpgradeCode="b8f3a2c1-4d9e-4b6f-9c2a-1e3d5f7a8b9c">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate />

    <!-- Install files from dotnet publish output (win-x64 publish folder).
         The publish folder will be harvested at CI runtime into a fragment (PublishFiles.wxs)
         which defines a ComponentGroup with Id="PublishFiles" that installs everything in the publish folder.
         This keeps Product.wxs stable and avoids hard-coded file names.
    -->

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="NeoNexus" />
      </Directory>
    </Directory>

    <!-- Native DLL component (we still include native DLL explicitly here) -->
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="cmpNeoNexusNative" Guid="*">
        <File Id="fileNeoNexusNative" Source="..\..\native\build\bin\NeoNexusNative.dll" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <Feature Id="ProductFeature" Title="NeoNexus" Level="1">
      <!-- Include all harvested publish files via the generated ComponentGroup -->
      <ComponentRef Id="cmpNeoNexusNative" />
      <ComponentGroupRef Id="PublishFiles" />
    </Feature>
  </Product>
</Wix>
