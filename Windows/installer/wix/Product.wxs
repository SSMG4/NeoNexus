<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="NeoNexus" Language="1033" Version="0.1.0.0" Manufacturer="SSMG4" UpgradeCode="b8f3a2c1-4d9e-4b6f-9c2a-1e3d5f7a8b9c">
    <!-- Make this an x64 MSI so 64-bit components are supported -->
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" Platform="x64" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate />

    <!-- Install files from dotnet publish output (harvested with heat.exe) -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <!-- Use ProgramFiles64Folder for x64 components -->
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="NeoNexus" />
      </Directory>
    </Directory>

    <!-- Do not declare a separate native DLL component here.
         The PublishFiles.wxs generated by heat will create components (including the native DLL)
         and a ComponentGroup with Id="PublishFiles". We include that ComponentGroup below. -->
    <Feature Id="ProductFeature" Title="NeoNexus" Level="1">
      <ComponentGroupRef Id="PublishFiles" />
    </Feature>
  </Product>
</Wix>
